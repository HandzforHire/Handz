<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3B3B3B"
    tools:context="com.example.baskar.handzforhire.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:background="@drawable/logo"/>


    <VideoView
        android:id="@+id/promo"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:layout_marginBottom="40sp"
        android:layout_marginTop="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A99344"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:text="frequently asked questions"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Q: Does it cost anything to use Handz?"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="A: The app is completely free for the \n&quot;Lend a Hand&quot; users and nearly free for \nthe &quot;Need a Hand&quot; users. To cover our \nrunning costs, when a completed job is \nclosed out, we charge the employer a flat \nfee of 50 cents! That's it!"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Q: What if i want to rehire the same person?"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="A: Once a job is completed, and \npayments have been made through the \napp, the job is moved to &quot;job history&quot;.\nHere,a chat feature allows you to talk to \npast employees. They will receive a push \nnotification that you've sent a message.\nIf you confirm that person is \navailable via the chat feature,there is a \nrehire button available as well. Click this \nbutton, update job details, and create a \nnew active job between you and your \nfavorite employee."/>

            </LinearLayout>

            </LinearLayout>

    </ScrollView>

   <!-- <TextView
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>-->

</RelativeLayout>
