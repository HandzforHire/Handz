<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BFE8C64B"
                    android:gravity="right">

                    <RelativeLayout
                        android:id="@+id/rela1"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_marginTop="10sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#178487">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="180sp"
                            android:layout_height="40sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20sp"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <RelativeLayout
                            android:id="@+id/rating"
                            android:layout_width="180sp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/text1"
                            android:layout_marginRight="20sp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5sp"
                                android:layout_toLeftOf="@+id/text3"
                                android:text="Rating: "
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <ImageView
                                android:layout_width="40sp"
                                android:layout_height="45sp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10sp"
                                android:layout_toLeftOf="@+id/text2"
                                android:background="@drawable/rating_btn" />

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="4.5"
                                android:textColor="#000000"
                                android:textSize="22sp" />

                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginTop="40dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/image_border" />

                        <ImageView
                            android:id="@+id/default_image"
                            android:layout_width="120sp"
                            android:layout_height="120sp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/default_profile"
                            android:scaleType="fitCenter"
                            android:src="@drawable/image_border" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#BFE8C64B">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30sp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="5sp"
                        android:text="WHEN :"
                        android:layout_marginLeft="20sp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Pay: $"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/tv3"
                        android:layout_marginTop="10sp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv"
                        android:layout_marginLeft="20sp"
                        android:layout_toRightOf="@+id/tv4"
                        android:layout_marginTop="10sp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:gravity="center_horizontal"
                    android:background="#BF178487">

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Include a Message for "
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:layout_marginTop="10sp" />

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_toRightOf="@+id/tv6"
                        android:textSize="19sp"
                        android:layout_marginTop="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:background="#BFB5B0AF"
                    android:gravity="bottom">


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:background="#BFE8C64B">

                    <RelativeLayout
                        android:id="@+id/lay1"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="#BF178487">

                        <ImageView
                            android:layout_width="160sp"
                            android:layout_height="90sp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3sp"
                            android:src="@drawable/handz"/>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_gray"
                        android:text="APPLY"
                        android:padding="20sp"
                        android:textStyle="bold"
                        android:textColor="#DCDCDC"
                        android:textSize="25sp"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="310dp"
            android:paddingTop="10sp"
            android:gravity="top"
            android:maxLines="200"
            android:textColorHint="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/border"
            android:hint="Place comments here(optional).."
            android:paddingLeft="15sp" />
    </FrameLayout>

</LinearLayout>