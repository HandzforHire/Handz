<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="580sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="#3B3B3B"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="120sp"
                        android:background="#BFE8C64B"
                        android:gravity="top">

                        <RelativeLayout
                            android:id="@+id/re"
                            android:layout_width="match_parent"
                            android:layout_height="85sp"
                            android:layout_marginTop="55sp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="#178487"
                            android:gravity="right">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#000000"/>

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#000000"
                                android:textSize="30sp"
                                android:gravity="center_vertical"
                                android:textAllCaps="true"
                                android:text="pay sierra"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="10sp"
                                android:layout_alignParentStart="true" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="#000000"/>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="110sp"
                            android:layout_height="110sp"
                            android:layout_marginRight="56dp"
                            android:scaleType="fitXY"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="48dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="110sp"
                            android:layout_height="110sp"
                            android:background="@drawable/image_border"
                            android:layout_alignTop="@+id/imageView"
                            android:layout_alignLeft="@+id/imageView"
                            android:layout_alignStart="@+id/imageView" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/re">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transaction Date :"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:layout_marginTop="22sp"
                                android:layout_marginLeft="5sp"
                                />
                            <EditText
                                android:id="@+id/et1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textStyle="italic"
                                android:textColor="#000000"
                                android:layout_marginLeft="20sp"
                                android:hint="0.00"
                                android:textColorHint="#000000"
                                android:textAllCaps="true"
                                android:textSize="20sp"
                                android:layout_marginTop="20sp"
                                android:layout_toRightOf="@+id/text1"
                                android:background="@android:color/transparent"
                                android:layout_gravity="center"/>

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Job Payout                   $"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:layout_below="@+id/et1"
                                    android:layout_marginTop="20sp"
                                    android:layout_marginLeft="5sp"
                                    />

                                <EditText
                                    android:id="@+id/et2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="20sp"
                                    android:hint="0.00"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:textSize="20sp"
                                    android:layout_marginTop="64sp"
                                    android:layout_toRightOf="@+id/text2"
                                    android:background="@android:color/transparent"
                                    android:layout_gravity="center"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                >
                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Handz For Hire Flat\nService Fee                   $"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5sp"
                                    />
                                <EditText
                                    android:id="@+id/et3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="20sp"
                                    android:hint="0.00"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:textSize="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/text3"
                                    android:background="@android:color/transparent"
                                    android:layout_gravity="center"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                >
                                <TextView
                                    android:id="@+id/text4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tip(Optional)                $"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5sp"
                                    />
                                <EditText
                                    android:id="@+id/et4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="20sp"
                                    android:hint="0.00"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:textSize="20sp"
                                    android:layout_toRightOf="@+id/text4"
                                    android:background="@android:color/transparent"
                                    android:layout_gravity="center"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                >

                                <TextView
                                    android:id="@+id/text5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Paypal Merchant\nProcessing Fee            $"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5sp"
                                    />
                                <EditText
                                    android:id="@+id/et5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="20sp"
                                    android:hint="0.00"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:layout_marginTop="12sp"
                                    android:textSize="20sp"
                                    android:layout_toRightOf="@+id/text5"
                                    android:background="@android:color/transparent"
                                    android:layout_gravity="center"/>

                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_alignParentBottom="true"
                                android:background="#000000"/>

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="30sp"
                                >

                                <TextView
                                    android:id="@+id/text6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total                   $"
                                    android:textColor="#000000"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    />
                                <EditText
                                    android:id="@+id/et6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="20sp"
                                    android:hint="0.00"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:layout_marginTop="5sp"
                                    android:textSize="20sp"
                                    android:layout_toRightOf="@+id/text6"
                                    android:background="@android:color/transparent"
                                    android:layout_gravity="center"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="85sp"
                        android:layout_height="85sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="6sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/logo">

                    </ImageView>

                        <TextView
                            android:id="@+id/tex"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:padding="10sp"
                            android:textColor="#DCDCDC"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/payamount"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
