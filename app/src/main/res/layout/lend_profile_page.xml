<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3B3B3B"
    tools:context="com.example.baskar.handzforhire.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="#BF178487"
                    android:layout_marginTop="20sp">

                    <RelativeLayout
                        android:id="@+id/relay"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="130sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20sp"
                        android:textSize="20sp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_toRightOf="@+id/text1"
                        android:background="@drawable/menu"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relay"
                        android:gravity="center"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="18sp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textStyle="italic"
                            android:layout_toLeftOf="@+id/text3"
                            android:layout_marginRight="5sp"
                            android:textSize="20sp"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"/>

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10sp"
                            android:layout_toLeftOf="@+id/text2"
                            android:background="@drawable/starnew"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="22sp"
                            android:textColor="#000000"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_marginLeft="20sp" >

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:padding="4dp"
                        android:src="@drawable/default_profile"
                        android:background="@drawable/image_border"
                        android:scaleType="fitCenter"
                        android:layerType="software"  />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp">

                    <Button
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/find_job"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:background="@drawable/job_map"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="job map view"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:layout_below="@+id/find_job"
                        android:textColor="#ffffff"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp">


                    <Button
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/list_view"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:background="@drawable/job_list"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job List View"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:textSize="12sp"
                        android:layout_below="@+id/list_view"
                        android:textColor="#ffffff"/>

                </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5sp"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:id="@+id/pending_job"
                            android:textSize="22sp"
                            android:textColor="#000000"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:background="@drawable/posted_jobs"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pending jobs"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_marginTop="5sp"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:layout_below="@+id/pending_job"
                            android:textColor="#ffffff"/>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/handz"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:id="@+id/active_job"
                            android:textSize="22sp"
                            android:textColor="#000000"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:background="@drawable/active_jobs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="active jobs"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_marginTop="5sp"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:layout_below="@+id/active_job"
                            android:textColor="#ffffff"/>

                    </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:orientation="horizontal"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp">

                    <Button
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/job_history"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:background="@drawable/job_history"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="job history"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:layout_below="@+id/job_history"
                        android:textColor="#ffffff"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp">


                    <Button
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/edit_user_profile"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:textAllCaps="true"
                        android:background="@drawable/edit_user"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="edit user \n profile"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:textSize="12sp"
                        android:layout_below="@+id/edit_user_profile"
                        android:textColor="#ffffff"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/need_help"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:background="@drawable/bulb"/>

            <ImageView
                android:id="@+id/sha_lend"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="end"
                android:layout_marginRight="30sp"
                android:src="@drawable/share"

                />

                <TextView
                    android:id="@+id/tex1"
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                   android:background="@drawable/handz"/>


             </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
