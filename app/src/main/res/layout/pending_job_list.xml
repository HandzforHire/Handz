<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="75sp"
            android:textSize="25sp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_gray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5sp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5sp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_green"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5sp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/whe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/rating"
            android:text="When: "
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/esti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relay2"
            android:text="Estimated Duration: "
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay:$ "
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginLeft="25sp"
                android:textAllCaps="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_hold"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center">
        <include layout="@layout/hold_popup" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_refuse"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">
            <include layout="@layout/refuse_popup" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_hire"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">
            <include layout="@layout/hire_popup" />
        </LinearLayout>
    </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10sp"
            android:background="#000000"/>

    </LinearLayout>
