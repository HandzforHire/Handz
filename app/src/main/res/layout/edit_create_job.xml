<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="660sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|center"
                    android:background="#BFE8C64B"
                    android:gravity="top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="70sp"
                            android:background="#000000"/>

                        <LinearLayout
                            android:id="@+id/rela1"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_below="@+id/descrip"
                            android:background="#BAB7AB"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Job Category"
                                android:textSize="18sp"
                                android:layout_marginLeft="15sp"
                                android:textStyle="italic"
                                android:layout_gravity="center"
                                android:textColor="#000000" />

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:id="@+id/img_arrow"
                                android:layout_marginLeft="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/right_arrow" />

                            <Spinner
                                android:id="@+id/listview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16sp"
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:orientation="vertical"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/shape">

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:textColor="#000000"
                                android:text="Job Title:"
                                android:paddingLeft="20sp"/>

                            <EditText
                                android:id="@+id/descrip"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16sp"
                                android:layout_marginBottom="5sp"
                                android:background="@android:color/transparent"
                                android:textColor="#000000"
                                android:paddingLeft="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:orientation="vertical"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/shape">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:textColor="#000000"
                                android:text="Detailed Job Description:"
                                android:paddingLeft="20sp"/>

                            <EditText
                                android:id="@+id/detail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="5sp"
                                android:background="@android:color/transparent"
                                android:paddingLeft="20sp"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10sp"
                            android:background="#000000"/>

                        <RelativeLayout
                            android:id="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:background="#BAB7AB"
                            android:layout_below="@+id/detail">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Date"
                                android:id="@+id/date_text"
                                android:textStyle="italic"
                                android:layout_marginLeft="15sp"
                                android:textColor="#000000"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_marginLeft="10sp"
                                android:layout_toRightOf="@+id/date_text"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10sp"
                            android:background="#000000"/>

                        <RelativeLayout
                            android:id="@+id/linear2"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:background="#BAB7AB"
                            android:layout_below="@+id/linear1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Time"
                                android:textColor="#000000"
                                android:textStyle="italic"
                                android:id="@+id/start_time_text"
                                android:layout_marginLeft="15sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_toRightOf="@+id/start_time_text"
                                android:layout_marginLeft="10sp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow" />

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="200sp"
                                    android:layout_height="40sp"
                                    android:visibility="invisible"
                                    android:textSize="16sp"
                                    android:gravity="right|center"
                                    android:layout_marginRight="30sp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5sp"
                                    android:textColor="#000000"
                                    android:textColorHint="#000000"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10sp"
                            android:background="#000000"/>


                        <RelativeLayout
                            android:id="@+id/linear3"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:background="#BAB7AB"
                            android:layout_below="@+id/linear2">

                            <TextView
                                android:id="@+id/end_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expected Duration"
                                android:textStyle="italic"
                                android:layout_marginLeft="15sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_toRightOf="@+id/end_time_text"
                                android:layout_marginLeft="10sp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000"/>

                        <LinearLayout
                            android:id="@+id/lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/layout2"
                            android:gravity="center"
                            android:layout_marginTop="15sp"
                            android:paddingBottom="5sp"
                            android:background="#BF178487">

                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_marginTop="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work Date/Time Is Flexible \n For This Job"
                                android:textSize="16sp"
                                android:paddingLeft="10sp"
                                android:button="@drawable/custom_checkbox"
                                android:gravity="center_vertical"
                                android:textAllCaps="true"
                                android:textColor="#000000"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10sp"
                            android:background="#000000"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear3">

                        <RelativeLayout
                            android:id="@+id/linear4"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:background="#BAB7AB">

                            <TextView
                                android:id="@+id/payment_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Details"
                                android:layout_centerVertical="true"
                                android:textStyle="italic"
                                android:layout_marginLeft="15sp"
                                android:layout_alignParentLeft="true"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_toRightOf="@+id/payment_details"
                                android:layout_marginLeft="10sp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relay1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/symbol"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40sp"
                                    android:textSize="16sp"
                                    android:text="$"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40sp"
                                    android:textSize="16sp"
                                    android:layout_toRightOf="@+id/symbol"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/pay_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40sp"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_marginLeft="20sp"
                                    android:layout_toRightOf="@+id/amount"
                                    android:textColor="#000000"
                                    android:textColorHint="#000000"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000"/>


                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/handz"/>

                    <Button
                        android:id="@+id/next"
                        android:layout_width="50sp"
                        android:layout_height="40sp"
                        android:textAllCaps="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/next_arrow"
                        android:layout_gravity="right"
                        android:layout_marginRight="15sp"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>