<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="550sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="90sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="#BFE8C64B">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="payment details"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textAllCaps="true"
                                android:textSize="20sp"
                                android:layout_marginTop="20sp"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:textAllCaps="true"
                                    android:textSize="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_gravity="center"/>

                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_width="100sp"
                                    android:layout_height="30sp"
                                    android:inputType="numberDecimal"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="10sp"
                                    android:hint="0.00"
                                    android:paddingLeft="10sp"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:textSize="20sp"
                                    android:background="@drawable/shape"
                                    android:layout_marginTop="10sp"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:id="@+id/text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hourly Wage"
                                    android:textStyle="italic"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="30sp"
                                    android:textAllCaps="false"
                                    android:textSize="16sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated duration x Hourly Wage = \n Estimated Payment"
                                android:textStyle="italic"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_marginTop="20sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(Payments can be adjusted before final \n transaction is made.)"
                                android:textStyle="italic"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:layout_marginBottom="20sp"
                                android:textSize="16sp"
                                android:layout_marginTop="10sp"
                                android:layout_gravity="center"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#000000">

                            </View>


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Looking for someone long term? \n Like a summer nanny or daily dog\n walker? Use Handz to help you \n find that perfect person! If you like\n them, We've made it convenient\n for you to reconnect and rehire!"
                            android:textStyle="italic"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:paddingBottom="15sp"
                            android:paddingTop="15sp"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:background="#178487"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000">

                        </View>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:id="@+id/relativeLayout">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="40sp"
                    android:layout_height="50sp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/x_button"
                    android:layout_above="@+id/relativeLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="421dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/handz"/>

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="70sp"
                    android:layout_height="45sp"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:background="@drawable/update"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_btn"
                    android:text="update"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#DCDCDC"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>