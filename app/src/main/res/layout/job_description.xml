<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFE8C64B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center"
                    android:background="#BFE8C64B"
                    android:gravity="top"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <RelativeLayout
                            android:id="@+id/rela1"
                            android:layout_width="match_parent"
                            android:layout_height="120sp"
                            android:background="#178487">

                            <LinearLayout
                                android:id="@+id/lay2"
                                android:layout_width="wrap_content"
                                android:layout_height="40sp"
                                android:gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="20sp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/text1"
                                    android:layout_width="180dp"
                                    android:layout_height="40sp"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:layout_weight="0.66" />

                                <ImageView
                                    android:id="@+id/close_btn"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_marginRight="20sp"
                                    android:layout_toRightOf="@+id/text1"
                                    android:background="@drawable/black_x_button" />


                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rating"
                                android:layout_width="180sp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lay2"
                                android:gravity="center"
                                android:layout_marginRight="50sp"
                                android:layout_alignParentRight="true">

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rating: "
                                    android:textStyle="italic"
                                    android:layout_toLeftOf="@+id/text3"
                                    android:layout_marginRight="10sp"
                                    android:textSize="20sp"
                                    android:layout_centerVertical="true"
                                    android:textColor="#000000"/>

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_marginRight="5sp"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/text2"
                                    android:background="@drawable/rating_btn"/>

                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="4.5"
                                    android:layout_alignParentRight="true"
                                    android:textSize="22sp"
                                    android:textColor="#000000"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="30sp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:scaleType="fitXY"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/default_profile"
                                android:padding="4dp"
                                android:background="@drawable/image_border"/>

                            <ImageView
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/image_border"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/job_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:paddingTop="5sp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/relay"
                            android:layout_below="@+id/rela1"
                            android:textColor="#000000"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/description_text"
                        android:layout_width="match_parent"
                        android:layout_height="250sp"
                        android:layout_below="@+id/r1"
                        android:layout_marginTop="20sp"
                        android:padding="20sp"
                        android:textStyle="bold"
                        android:scrollbars="vertical"
                        android:textColor="#DCDCDC"
                        android:textSize="18sp"
                        android:background="#3B3B3B"/>

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/description_text"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="when:"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginLeft="20sp"
                            android:textSize="18sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="20sp"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:visibility="invisible"
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textColor="#000000"
                            android:visibility="invisible"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/l1"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pay:"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginLeft="20sp"
                            android:layout_marginBottom="10sp"
                            android:textSize="18sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="#000000"
                            android:layout_marginLeft="20sp"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </RelativeLayout>

       </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3B3B3B">

            <TextView
                android:id="@+id/apply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply for the job"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:padding="10sp"
                android:textAllCaps="true"
                android:background="@drawable/border_gray"
                android:layout_marginBottom="10sp"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:textSize="28sp"
                android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>