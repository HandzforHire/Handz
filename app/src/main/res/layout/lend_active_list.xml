<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_marginLeft="10sp"
            android:textSize="13sp"/>

        <LinearLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/re2"
                android:layout_width="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:padding="4dp"
                    android:src="@drawable/default_profile"
                    android:background="@drawable/image_border" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/job_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/job_name_text">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/employer_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/employee_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="when:"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginLeft="10sp"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/when"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="4sp"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/lay"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="expected duration:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5sp"
                        android:textSize="14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/lay3"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pay:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="#000000"
                        android:layout_marginLeft="2sp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/pay_amount"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:weightSum="3">

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:background="@drawable/gray_box"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="job\ndetails"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:background="@drawable/gray_box"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/red1"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/circle_shape"
                        android:textColor="#ffffff"
                        android:visibility="invisible"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="30sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon__chat"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="message"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:id="@+id/lay2"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:background="@drawable/gray_box"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/red2"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/circle_shape"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="invisible"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text=" request \n payment"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5sp"
            android:background="#000000"/>


    </LinearLayout>

</LinearLayout>